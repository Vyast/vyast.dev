---
export interface Props {
  title: string;
}

const { title } = Astro.props;

const description =
  "Official site of vyast.dev | Noah, cs student & full stack dev";
---

<head>
  <title>{title}</title>
  <link rel="icon" href="/favicon.ico" />

  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="manifest" href="/site.webmanifest" />
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#6201fd" />
  <meta name="msapplication-TileColor" content="#603cba" />
  <meta name="theme-color" content="#0d0d0d" />

  <meta name="author" content="Vyast" />
  <meta name="description" content={description} />
  <meta
    name="keywords"
    content="vyast, vyast.dev, n4, n4.gg, venom, vac, venomac, fivem, development, developer, dev"
  />

  <meta property="og:description" content={description} />
  <meta property="og:image" content="/images/wallpaper.png" />
  <meta property="og:site_name" content="vyast.dev" />
  <meta property="og:title" content={title} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://vyast.dev" />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content="/images/wallpaper.png" />
  <meta name="twitter:creator" content="@vyasts" />

  <link rel="sitemap" href="/sitemap-index.xml" />

  <meta charset="UTF-8" />
  <meta name="generator" content={Astro.generator} />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
