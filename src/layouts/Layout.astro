---
import "@/styles/globals.css";

import Seo from "@/components/Seo.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html
  lang="en"
  class="antialiased bg-topography bg-[#0d0d0d] text-white font-industry"
>
  <Seo title={title} />
  <body class="flex min-h-screen flex-col mx-auto max-w-xl px-4">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
